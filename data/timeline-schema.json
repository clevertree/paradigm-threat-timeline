{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Timeline Data",
  "description": "Schema for paradigm-threat-timeline entries (recursive)",
  "type": "object",
  "properties": {
    "entries": {
      "type": "array",
      "description": "Recursive array of entries. Each entry has id, title, md_path, dates, children.",
      "items": {
        "$ref": "#/definitions/entry"
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "entries"
  ],
  "definitions": {
    "entry": {
      "type": "object",
      "required": [
        "id",
        "title",
        "md_path",
        "children"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier"
        },
        "type": {
          "type": "string",
          "enum": ["article", "event"],
          "description": "article = no date in header; event = date in header"
        },
        "title": {
          "type": "string",
          "description": "Must match first # header in md_path file"
        },
        "md_path": {
          "type": "string",
          "description": "Path to markdown file (e.g. events/foo.md)"
        },
        "dates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "start": {
                "type": "number",
                "description": "Start year (negative = BCE)"
              },
              "end": {
                "type": "number",
                "description": "End year"
              },
              "calendar": {
                "type": "string",
                "enum": [
                  "CE",
                  "BCE",
                  "AD",
                  "BC"
                ]
              }
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/entry"
          }
        },
        "timeline_sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "context": {
          "type": "object",
          "properties": {
            "mainstream": {
              "type": "boolean"
            },
            "theoretical": {
              "type": "boolean"
            }
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "duplicate_of": {
          "type": "string"
        },
        "related_events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "media": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}